.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    display: flex;
    height: 100rpx;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.like {
    margin-top: 6rpx;
    margin-right: 6rpx;
}

.epsoide {
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.nav {
    position: absolute;
    bottom: 40rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right: 30rpx;
}


.share-btn {
    margin-top: 28rpx;
    margin-left: 10rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}